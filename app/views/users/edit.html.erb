<div class="viewport">


  <%= simple_form_for @user, url: user_path, method: :put do |f| %>
  <%= f.input :first_name, placeholder: "Paolo" %>
  <%= f.input :last_name, placeholder: "Rossi" %>
  <%= f.input :email, placeholder: "paolo.rossi@gmail.com" %>
  <%= f.input :age, placeholder: 28 %>
  <%= f.input :gender, placeholder: "Male" %>
  <%= f.input :radius_search, placehoder: 2 %>
  <%= f.submit "Update profile", class: "edit-delete-profile-buttons" %>
  <% end %>
  <%= link_to destroy_user_session_path, method: :delete do %>
    <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
    <% end %>
  <%= link_to "Go to search!", root_path %>


</div>



