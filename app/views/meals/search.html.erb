<div class="spinnerdiv">

  <div class="spinner">
    <div class="dot1"></div>
    <div class="dot2"></div>
  </div>
  <p id="positiontext">Retrieving your position...</p>
</div>

<div class="foodie-wrapper">
  <div class="foodie-container">
    <!-- CATEGORIES -->
    <form action="/meals" method="get">
      <div class="cat-container">
       <h1 class="search-header">Select a category</h1>
       <div class="cat-btns">
          <% @categories.each do |tag| %>
          <input type="radio" id="<%= tag %>" name="category" value="<%= tag %>">
          <label for="<%= tag %>"><%= tag.capitalize %></label>
        <% end %>
           <input type="radio" id="randomize">
          <label for="randomize">Surprise me! </label>
      </div>
    </div>

    <!-- PRICE -->
    <div class="price-container">
     <h1 class="search-header">Select your budget</h1>
     <div class="price-btns">
        <input type="radio" id="low" name="max_price" value="5">
      <label for="low">5€</label>
      <input type="radio" id="med" name="max_price" value="10">
      <label for="med">15€</label>
      <input type="radio" id="med-high" name="max_price" value="15">
      <label for="med-high">10€</label>
      <input type="radio" id="high" name="max_price" value="20">
      <label for="high">20€</label>
    </div>
  </div>


  <!-- RANDOM -->
  <div class="lucky-container ">
    <button type="submit" class="search-btn" name="randomize" value="true">
    Search <i class="fas fa-magic"></i>
   </button>
   <!-- <p>Feeling lucky?</p> -->
 </div>
</form>
</div>
</div>
<%= javascript_pack_tag 'positioning' %>


